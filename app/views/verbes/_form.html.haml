= form_for @verbe do |f|
  - if @verbe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@verbe.errors.count, "error")} prohibited this verbe from being saved:"
      %ul
        - @verbe.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :infinitif
    = f.text_field :infinitif

    -i = 0

    %table#saisie_verbe

      = f.fields_for :formes do |formes_form|
        -if i/6*6 == i
          %tr
          %td= formes_form.label :italien, Forme::FORMES[i][0]
        %td= formes_form.text_field :italien, size: 20, class: 'italien'
        =formes_form.hidden_field :rang_forme
        = formes_form.fields_for :scores_formes do |scores_formes|
          %td= scores_formes.number_field :compteur, class: 'compteur'
          =scores_formes.hidden_field :user_id
        -i+=1

  %br

  .actions
    = f.submit 'Save'
