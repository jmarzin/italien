%p#notice= notice

%p
  %b Mot directeur:
  = @mot.mot_directeur
%p
  %b Francais:
  = @mot.francais
%p
  %b Italien:
  = @mot.italien
-if user_signed_in?
  %p
    %b Compteur:
    = @mot.scores_mots.where(user_id: current_user.id).first.compteur

-if @peut_corriger
  = link_to 'Corr', edit_mot_path(@mot)
  \|
-if @peut_supprimer
  = link_to 'Nouveau', new_mot_path
  \|
= link_to 'Retour', mots_path
